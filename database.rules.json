{
  "rules": {
    "users": {
      "$pseudo": {
        ".read": "true",
        ".write": "true"
      }
    },
    "posts": {
      ".read": "true",
      ".indexOn": [
        "timestamp"
      ],
      "$postId": {
        ".write": "auth != null || true"
      }
    },
    "comments": {
      "$postId": {
        ".read": "true",
        ".write": "true",
        ".indexOn": [
          "timestamp"
        ]
      }
    },
    "notifications": {
      "$pseudo": {
        ".read": "true",
        ".write": "true"
      }
    }
  }
}