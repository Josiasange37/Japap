{
  "rules": {
    "users": {
      "$pseudo": {
        ".read": "true",
        ".write": "true"
      }
    },
    "posts": {
      ".read": "true",
      "$post_id": {
        ".write": "auth != null",
        "author": {
          "id": {
            ".validate": "newData.isString()"
          }
        },
        "stats": {
          ".write": "auth != null"
        }
      }
    },
    "comments": {
      ".read": "true",
      ".write": "auth != null"
    }
  }
}